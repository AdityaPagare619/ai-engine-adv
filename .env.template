# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_db_username
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://username:password@postgres:5432/database_name

# Redis Configuration
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_URL=redis://:password@redis:6379/0

# Security & Authentication
JWT_SECRET=your-long-secure-secret-here-minimum-256-chars
JWKS_URI=https://your-identity-provider/.well-known/jwks.json
JWT_SECRET_KEY=your-super-secure-256-bit-secret-key-change-this-immediately
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
ADMIN_KEY_HASH=generate-using-bcrypt-hash-function

# Service Ports (adjust if needed)
GATEWAY_PORT=8080
ADMIN_PORT=8001
DB_MANAGER_PORT=8004
PROCESSOR_PORT=8002
ASSET_PORT=8003
API_PORT=8000
FRONTEND_PORT=3000